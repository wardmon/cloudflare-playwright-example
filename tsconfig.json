{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "DOM"],
    "moduleResolution": "bundler",
    "noEmit": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "types": ["./worker-configuration.d.ts", "@types/node"]
  },
  "include": ["./**/*.ts", "./**/*.d.ts"],
}
